<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#95fce2"
    android:id="@+id/alarm_screen_layout">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_gravity="center_horizontal"
        android:textSize="70sp"
        android:layout_margin="15dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:editable="false"
        android:clickable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap on Time,Run Snooze"
        android:id="@+id/textView6"
        android:textSize="25sp"
        android:password="false"
        android:foregroundGravity="fill_vertical"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/alarm_name"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="名前"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="どれかで止まります"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarm_stop_button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button"
                android:layout_weight="1"
                android:text="Stop"
                android:textSize="30sp" />

            <Button
                android:id="@+id/alarm_stop_button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button"
                android:layout_weight="1"
                android:text="Stop"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarm_stop_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button"
                android:layout_weight="1"
                android:text="Stop"
                android:textSize="30sp"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/alarm_stop_button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button"
                android:layout_weight="1"
                android:text="Stop"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>