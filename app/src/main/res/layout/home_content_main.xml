<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sakashun.alarmapplication.MainActivity"
    tools:showIn="@layout/home_app_bar_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:background="@color/colorHomeBack">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Alarm_list_height"
                android:background="@color/colorAlarmToolBar">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="最近使用したアラーム"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="@dimen/list_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageView8"
                    android:textColor="@color/colorAlarmToolbarText" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_alarm_3x"
                    android:layout_margin="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/alarm_list_linear"></LinearLayout>
            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true" >
                <RelativeLayout
                    android:id="@+id/alarm_all_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/small_list_height">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="すべてのアラーム"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="@dimen/list_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorAlarmListPrimaryText" />

            </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"></RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Alarm_list_height"
                android:background="@color/colorReminderToolBar" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="今日のリマインダー"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="@dimen/list_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageView9"
                    android:textColor="#ffffff" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView9"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Alarm_list_height"
                android:background="@color/colorReminderListSecondary" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="買い物"
                        android:id="@+id/textView20"
                        android:layout_weight="1"
                        android:textSize="@dimen/list_text_size"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="35dp"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="17:00"
                        android:id="@+id/textView17"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/list_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Alarm_list_height"
                android:background="@color/colorReminderListSecondary" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="開発"
                        android:id="@+id/textView16"
                        android:layout_weight="1"
                        android:textSize="@dimen/list_text_size"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="35dp"
                        android:gravity="center_vertical" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="19:00"
                        android:id="@+id/textView19"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/list_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>



            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_list_height"
                android:id="@+id/reminder_all_lisst">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="すべてのリマインダー"
                    android:id="@+id/textView18"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="@dimen/list_text_size"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorAlarmListPrimaryText" />
            </RelativeLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHomeLine"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
